---
const {nomMaison, nbChambres, nbSdb, prix, surface, favori, adresse, imgUrl} = Astro.props;
---

<div x-data={`{favori: ${favori}}`} class="card p-4 rounded-lg shadow-lg">
    <img src={imgUrl} alt={nomMaison} class="w-full h-48 object-cover rounded-t-lg mb-4" />
    <h2 class="text-xl font-bold mb-2">{nomMaison}</h2>
    <button @click="favori = !favori" x-bind:class="favori ? 'bg-yellow-500 hover:bg-yellow-700' : 'bg-blue-500 hover:bg-blue-700'" class="text-white px-4 py-2 rounded">Favori</button>
</div>